@{
  Layout = "_Layout";
}

@using Help.Models;
@model List<Help.Models.Restaurant>;
<br>
<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>You haven't added your restaurant yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</li>
}
<br>
<p>@Html.ActionLink("Add your restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>