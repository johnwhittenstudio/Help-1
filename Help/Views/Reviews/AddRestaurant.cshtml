@{
  Layout = "_Layout";
}

@model Help.Models.Review
<br>
<h2>Add a review</h2>

<h4>Add a review to this restaurant: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ReviewId)

  @Html.Label("Select Restaurant")
  @Html.DropDownList("RestaurantId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>